<?xml version="1.0"?>
<robot name="gopigo3">
  <ros2_control name="gpg_remote" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboRosControlPlugin</plugin>
    </hardware>

    <joint name="left_wheel">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>  
    </joint>
    <joint name="right_wheel">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>  
    </joint>
    <joint name="servo">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
    <sensor name="line">
      <state_interface name="level0"/>
      <state_interface name="level1"/>
      <state_interface name="level2"/>
      <state_interface name="level3"/>
      <state_interface name="level4"/>
    </sensor>
    <sensor name="battery">
      <state_interface name="voltage"/>
    </sensor>
  </ros2_control>

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.005" radius="0.075"/>
      </geometry>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.005" radius="0.075"/>
      </geometry>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Right Wheel Link -->
  <link name="right_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Right Wheel Joint -->
  <joint name="right_wheel" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="0 -0.062 0.0375" rpy="0 0 0"/> 
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
  </joint>

  <!-- Left Wheel Link -->
  <link name="left_wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.0375"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Left Wheel Joint -->
  <joint name="left_wheel" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="0 0.062 0.0375" rpy="0 0 0"/> 
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
  </joint>

  <!-- Servo Link -->
  <link name="servo_link">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.03"/> 
      </geometry>
      <material name="blue"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.03 0.03 0.03"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Servo Joint -->
  <joint name="servo" type="revolute">
    <axis xyz="0 0 1"/> 
    <limit lower="-1.57" upper="1.57" effort="1" velocity="1"/>
    <origin xyz="0.075 0 0.065" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="servo_link"/>
  </joint>

  <!-- Camera Link -->
  <link name="camera_link"> 
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!--Camera joint-->
  <joint name="camera_to_servo_link" type="fixed">
    <origin xyz="0.015 0 0" rpy="-1.57 0 0"/>
    <parent link="servo_link"/>
    <child link="camera_link"/>
  </joint>

  <link name="robot_support_link">
    <visual>
      <geometry>
        <cylinder length="0.01875" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="01875" radius="0.01"/>
      </geometry>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.00005" ixy="0.0" ixz="0.0" iyy="0.00005" iyz="0.0" izz="0.00005"/>
    </inertial>
  </link>

  <joint name="robot_support_joint" type="continuous">
    <parent link="base_link"/>
    <child link="robot_support_link"/>
    <origin xyz="-0.065 0 0.0375" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>


  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros2_control.so">
      <ros2_control>
        <parameters>$(find gpg_urdf)/gpg_urdf/controllers.yaml</parameters>
      </ros2_control>
    </plugin>
  </gazebo>
</robot>

